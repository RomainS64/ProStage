{% extends 'base.html.twig' %}


{% block body %}

	{%if nom is defined%}
	<h1>{{nom}}</h1>
	{%endif%}
	<div class="container-fluid">
	<div class="row">
			{%for stage in stages%}
			<div class="col-md-4 col-xs-1 mx-auto">
				<div class="card">
					<div class="card-body">
					<img src="https://picsum.photos/350/" class="card-img-top" alt="Image">
						<h5 class="card-title"> {{stage.intitule}} </h5>
						<p class="card-text">Durée : {{stage.duree}} jours</p>
						<p class="card-text">Date de début : {{stage.dateDebut | date("d/m/Y")}}</p>
						<a href="{{path('stage',{'id' : stage.id})}}" class="btn btn-primary">Plus de détails</a>
					</div>
				</div>
			</div>
			<br>
		{%endfor%}
		</div>
	</div>
{% endblock %}
